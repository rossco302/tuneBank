MyScreenManager:
	LoadingScreen:
	MainScreen:
	TuneTypesScreen:
	TuneKeysScreen:
	DisplayTunesScreen:
	SearchScreen:

<LoadingScreen>
	name: 'loadingscreen'
	Button:
		text:'Welcome to tune bank'
		on_press: root.load_data()
		on_release: 
			app.root.current = 'main screen'
			app.root.transition.direction = 'left'

<MainScreen>
	name: 'main screen'
	BoxLayout:
		orientation: 'vertical'
		Button:
			text:'Tune Bank'
			on_press: root.populalte_main_tune_list_rv()
			on_release: 
				app.root.current = 'tune_search'
				app.root.transition.direction = 'left'
		Button:
			text: 'Search'
			on_press: 
				app.root.current = 'search_screen' 
				app.root.transition.direction = 'left'

<TuneTypesScreen>
	tune_search: tune_search_res
	name: 'tune_search'
	BoxLayout:
		orientation: 'vertical'
		TextInput:
	    	size_hint_y: 1
	    	id: tune_search_res
	    Button:
	    	size_hint_y: 1
	    	text: 'search'	
	    	on_press: root.search_tune_bank()
		TuneTypesRV:
			size_hint_y: 10
	        viewclass: 'TuneTypesRVButton'
	        data: app.main_tune_list_rv
	        RecycleBoxLayout:
	            default_size: None, dp(56)
	            default_size_hint: 1, None
	            size_hint_y: None
	            height: self.minimum_height
	            orientation: 'vertical'
	    Button:
	    	size_hint_y: 1
	    	text:'Home'
	    	on_press: 
	    		app.root.current = 'main screen'
	    		app.root.transition.direction = 'right'

<SearchScreen>
	search_screen: search_query
	name: 'search_screen'
	BoxLayout:
		orientation: 'vertical'
		TextInput:
			id: search_query
			size_hint_y: 1
		Button:
			text: 'search'
			on_press: root.populate_search_rv_data()
		SearchRV:
			size_hint_y: 10
	        viewclass: 'SearchRVButton'
	        data: app.search_result_rv_data
	        RecycleBoxLayout:
	            default_size: None, dp(56)
	            default_size_hint: 1, None
	            size_hint_y: None
	            height: self.minimum_height
	            orientation: 'vertical'
		Button:
			size_hint_y: 1
	    	text:'Home'
			on_press: 
				app.root.current = 'main screen'
				app.root.transition.direction = 'right'

<TuneKeysScreen>
	name: 'tune keys screen'
	BoxLayout:
		orientation: 'vertical'
		TuneKeysRV:
			size_hint_y: 10
	        viewclass: 'TuneKeysRVButton'
	        data: app.tune_keys_rv_data
	        RecycleBoxLayout:
	            default_size: None, dp(56)
	            default_size_hint: 1, None
	            size_hint_y: None
	            height: self.minimum_height
	            orientation: 'vertical'
	    BoxLayout:
		    size_hint_y: 1
		    orientation: 'horizontal'
		    Button:
		    	text:'Back'
		    	on_press: 
		    		app.root.current = 'tune types'
		    		app.root.transition.direction = 'right'
		    Button:
		    	text:'Home'
		    	on_press: 
		    		app.root.current = 'main screen'
		    		app.root.transition.direction = 'right'



<DisplayTunesScreen>
	name: 'display tunes screen'
	BoxLayout:
		orientation: 'vertical'
		DisplayTypesRV:
			size_hint_y: 10
		    viewclass: 'DisplayTunesScreenButton'
		    data: app.display_tune_rv_data
		    RecycleBoxLayout:
		        default_size: None, dp(56)
		        default_size_hint: 1, None
		        size_hint_y: None
		        height: self.minimum_height
		        orientation: 'vertical'
	    BoxLayout:
		    size_hint_y: 1
		    orientation: 'horizontal'
		    Button:
		    	text:'Back'
		    	on_press: 
		    		app.root.current = 'tune keys screen'
		    		app.root.transition.direction = 'right'
		    Button:
		    	text:'Home'
		    	on_press: 
		    		app.root.current = 'main screen'
		    		app.root.transition.direction = 'right'

<TuneTypesRVButton>
	on_press: root.open_tune_popup()
	on_release: root.create_abc_and_midi()
	id: tune_types_rv_button


<TuneKeysRVButton>
	on_press: root.populate_display_tunes_rv()
	on_release:
		app.root.current = 'display tunes screen'
		app.root.transition.direction = 'left'

<SearchRVButton>
	on_press: root.open_popup()
	on_release: root.create_abc_and_midi()
	id: searchrvbutton

<AddToBankPopup>
	BoxLayout:
		orientation: 'vertical'
		Button:
			size_hint_y: 5
			text: 'add {} to bank'.format(root.title)
			on_press: root.add_tune_to_data_base()
	    Button:
	    	size_hint_y:1
	        text: 'Back'
	        on_release: root.dismiss()

<DisplayTunesScreenButton>
	on_press: root.open_tune_popup()
	on_release: root.create_abc_and_midi()
	id: display_tunes_id

<TunePopup>
	title: 'tune player'
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'vertical'
			Button:
				size_hint_y:2
				text:'play'
				on_press: root.play_tune()
			Button:
				size_hint_y:2
				text:'stop'
				on_press: root.stop_tune()
			Button:
				size_hint_y:2
				text:'delete from bank'
				on_press: root.delete_from_tune_bank()
		Label:
			size_hint_y: 7
			text: ''
		Button:
			size_hint_y:1
		    text: 'Back'
		    on_press: root.del_temp_mid()
		    on_release: root.dismiss()












